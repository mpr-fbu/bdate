<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/oceanBlue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:text="What makes you different" />

    <TextView
        android:id="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Put a check next to all of your hobbies to help find your perfect match." />

    <Button
        android:id="@+id/skip"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="Skip"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_alignLeft="@+id/explanation"
        android:layout_alignRight="@+id/explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvInterests"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sign_up_button_style"
        android:textColor="@color/white"
        android:text="Continue" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvInterests"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/explanation"
        android:layout_alignLeft="@+id/explanation"
        android:layout_alignRight="@+id/explanation" >

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/dot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dot2"
        android:layout_toStartOf="@+id/dot2"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/divider_dot" />

    <ImageView
        android:id="@+id/dot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:paddingRight="2.5dp"
        app:srcCompat="@drawable/divider_dot" />

    <ImageView
        android:id="@+id/dot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dot2"
        android:layout_toEndOf="@+id/dot2"
        android:layout_centerHorizontal="true"
        android:tint="@color/oceanBlue"
        android:paddingLeft="2.5dp"
        app:srcCompat="@drawable/divider_dot" />

    <ImageView
        android:id="@+id/dot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dot2"
        android:layout_toEndOf="@+id/dot3"
        android:paddingLeft="5dp"
        app:srcCompat="@drawable/divider_dot" />

</RelativeLayout>